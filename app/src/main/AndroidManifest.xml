<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mcgill.ecse321.soccerscorekeepingapp_android">

    <uses-permission
        android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateMatchActivity"
            android:label="@string/title_activity_create_match"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LiveInputActivity"
            android:label="@string/title_activity_live_input"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BatchInputActivity"
            android:label="@string/title_activity_batch_input"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ManagerActivity"
            android:label="@string/title_activity_manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LeagueAnalysisActivity"
            android:label="@string/title_activity_league_analysis"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlayerAnalysisActivity"
            android:label="@string/title_activity_player_analysis"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
