<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ca.mcgill.ecse321.soccerscorekeeping_android.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soccer Score Keeper"
        android:textStyle="bold"
        android:typeface="normal"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MANAGER MODE"
        android:id="@+id/button2"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIVE INPUT MODE"
        android:id="@+id/liveInputButtob"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:onClick="openCreateMatchPageForLive" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BATCH INPUT MODE"
        android:id="@+id/batchInputButton"
        android:layout_below="@+id/liveInputButtob"
        android:layout_alignLeft="@+id/liveInputButtob"
        android:layout_alignStart="@+id/liveInputButtob"
        android:layout_alignRight="@+id/liveInputButtob"
        android:layout_alignEnd="@+id/liveInputButtob"
        android:onClick="openCreateMatchPageForBatch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEAGUE ANALYSIS MODE"
        android:id="@+id/button4"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/batchInputButton"
        android:layout_alignLeft="@+id/batchInputButton"
        android:layout_alignStart="@+id/batchInputButton"
        android:layout_alignRight="@+id/batchInputButton"
        android:layout_alignEnd="@+id/batchInputButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER ANALYSIS MODE"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />
</RelativeLayout>